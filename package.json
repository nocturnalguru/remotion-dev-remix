    "@remix-run/vercel": "1.19.3",
    "@remotion/cli": "^4.0.0",
    "@remotion/lambda": "^4.0.0",
    "@remotion/player": "^4.0.0",
    "@vercel/remix": "2.5.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "remotion": "^4.0.0",
    "isbot": "4.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "2.12.1",
    "@remix-run/eslint-config": "2.12.1",
    "@remotion/eslint-plugin": "^4.0.0",
    "@types/node": "20.12.14",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "dotenv": "16.0.3",
    "eslint": "8.56.0",
    "prettier": "3.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.5.4"
  }
